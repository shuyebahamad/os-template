{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build OS",
            "command": "make",
            "args": [
                "build",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Launch QEMU",
            "command": "echo Starting QEMU&qemu-system-i386 -s -S -cdrom OS2025.iso",
            "isBackground": true,
            "dependsOn": "Build OS",
            "options": {
                "cwd": "${workspaceFolder}/bin"
            },
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": ".",
                }
            }
        },
        {
            "type": "shell",
            "label": "Exit QEMU",
            "command": "pkill -f qemu || test $? -eq 1"
        }
    ],
}
